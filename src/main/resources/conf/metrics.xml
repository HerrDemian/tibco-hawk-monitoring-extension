<stats>
    <stat methodName="GetBWActivityStatistics"
          basePath="Application Name|Application Version|Process Name|Activity Name|" metric-type="OBS.CUR.COL">
        <metric columnName="Execution Count" label="Execution Count"/>
        <metric columnName="Error Count" label="Error Count"/>
        <metric columnName="Last Return Code" label="Rolled Back Transactions">
            <converter str="COMPLETED" value="1"/>
            <converter str="FAULTED" value="0"/>
        </metric>
        <metric columnName="Execution Time" label="Execution Time"/>
        <metric columnName="Elapsed Time" label="Elapsed Time"/>
        <metric columnName="Min Elapsed Time" label="Min Elapsed Time"/>
        <metric columnName="Max Elapsed Time" label="Max Elapsed Time"/>
        <metric columnName="Min Execution Time" label="Min Execution Time"/>
        <metric columnName="Max Execution Time" label="Max Execution Time"/>
        <metric columnName="Most Recent Execution Time" label="Most Recent Execution Time"/>
        <metric columnName="Most Recent Elapsed Time" label="Most Recent Elapsed Time"/>
        <metric columnName="Execution Count Since Reset" label="Execution Count Since Reset"/>
    </stat>
    <stat methodName="GetBWProcessStatistics"
          basePath="Application Name|Application Version|Module Name|Module Version|Process Name|"
          metric-type="OBS.CUR.COL">
        <metric columnName="Created" label="Created"/>
        <metric columnName="Suspended" label="Suspended"/>
        <metric columnName="Failed" label="Failed"/>
        <metric columnName="Completed" label="Completed"/>
        <metric columnName="Total Execution" label="Total Execution"/>
        <metric columnName="Average Execution" label="Average Execution"/>
        <metric columnName="Total Elapsed" label="Total Elapsed"/>
        <metric columnName="Average Elapsed" label="Average Elapsed"/>
        <metric columnName="Min Elapsed" label="Min Elapsed"/>
        <metric columnName="Max Elapsed" label="Max Elapsed"/>
        <metric columnName="Min Execution" label="Min Execution"/>
        <metric columnName="Max Execution" label="Max Execution"/>
        <metric columnName="Most Recent Execution Time" label="Most Recent Execution Time"/>
        <metric columnName="Most Recent Elapsed Time" label="Most Recent Elapsed Time"/>
        <metric columnName="Count Since Reset" label="Count Since Reset"/>
    </stat>
    <stat methodName="GetBWAppNodeProcessInfo" basePath="AppNode Name|" metric-type="OBS.CUR.COL">
        <metric columnName="Active Thread Count" label="Active Thread Count"/>
        <metric columnName="Total Memory" label="Total Memory"/>
        <metric columnName="Used Memory" label="Used Memory"/>
        <metric columnName="Free Memory" label="Free Memory"/>
        <metric columnName="Used Memory Percentage" label="Used Memory Percentage"/>
        <metric columnName="Used CPU Percentage" label="Used CPU Percentage"/>
    </stat>
</stats>